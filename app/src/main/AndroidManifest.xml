<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.w4118project">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/petagram_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/petagram_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.w4118project.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.w4118project.Favoritos"
            android:parentActivityName="com.example.w4118project.MainActivity">

            <!-- SOPORTE PARA VERSIONES 4.0 O MENORES -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.w4118project.MainActivity" />
        </activity>
        <activity
            android:name="com.example.w4118project.About"
            android:parentActivityName="com.example.w4118project.MainActivity">

            <!-- SOPORTE PARA VERSIONES 4.0 O MENORES -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.w4118project.MainActivity" />
        </activity>
        <activity
            android:name="com.example.w4118project.Contacto"
            android:parentActivityName="com.example.w4118project.MainActivity">

            <!-- SOPORTE PARA VERSIONES 4.0 O MENORES -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.w4118project.MainActivity" />
        </activity>
        <activity
            android:name="com.example.w4118project.Config"
            android:parentActivityName="com.example.w4118project.MainActivity">

            <!-- SOPORTE PARA VERSIONES 4.0 O MENORES -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.w4118project.MainActivity" />
        </activity>
    </application>

</manifest>